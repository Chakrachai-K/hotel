<?xml version="1.0" encoding="UTF-8"?>
<?init class="org.zkoss.zkplus.databind.AnnotateDataBinderInit" ?>
<?variable-resolver class="org.zkoss.zkplus.spring.DelegatingVariableResolver"?>

<zk xmlns="http://www.zkoss.org/2005/zul"
    xmlns:h="http://www.w3.org/1999/xhtml"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.zkoss.org/2005/zul http://www.zkoss.org/2005/zul/zul.xsd">

    <window apply="team08.EmployeeComposer">

        

        
        <hbox id="mainpage" >
            <groupbox width="500px" height ="200px">
                <vbox>
                 <button id="btnEM" height="25px" width="70px">ผู้จัดการ</button>
                </vbox>
            </groupbox>
        </hbox>
        <hbox id="managerpage" width="100%" visible="false">
            <groupbox height="25%" width="100%">
                <vbox>
                    <listbox id="listmanager" width="800px">
                        <listhead>
                            <listheader label="รหัสพนักงาน" width="15%"/>
                            <listheader label="ชื่อ" width="20%" />
                            <listheader label="นามสกุล" width="20%"/>

                                <button id="btnplus" height="25px" width="100px">เพิ่มพนักงาน</button>
                            </vbox>
                        </hbox>
                    </vbox>
                </groupbox>
            </groupbox>
        </hbox>
        <hbox id="pluspage" visible="false">
            <groupbox width="500px" height ="200px">
                <vbox>
                 <button id="btnEMe" height="25px" width="70px">ผู้จัดการ</button>
                </vbox>
            </groupbox>
        </hbox>

        
       
        
        
       
        
        

